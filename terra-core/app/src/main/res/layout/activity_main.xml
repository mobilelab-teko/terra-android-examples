<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/showLogLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_log"
        android:layout_margin="@dimen/af_util_margin_padding_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showLogValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/af_util_margin_padding_default"
        app:layout_constraintLeft_toRightOf="@id/showLogLabel"
        app:layout_constraintTop_toTopOf="@id/showLogLabel"
        tools:text="demo"
        />

    <TextView
        android:id="@+id/demoStringLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_string"
        android:layout_margin="@dimen/af_util_margin_padding_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showLogLabel" />

    <TextView
        android:id="@+id/demoStringValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/af_util_margin_padding_default"
        app:layout_constraintLeft_toRightOf="@id/demoStringLabel"
        app:layout_constraintTop_toTopOf="@id/demoStringLabel"
        tools:text="demo"
        />

    <TextView
        android:id="@+id/demoNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_number"
        android:layout_margin="@dimen/af_util_margin_padding_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/demoStringLabel" />

    <TextView
        android:id="@+id/demoNumberValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/af_util_margin_padding_default"
        app:layout_constraintLeft_toRightOf="@id/demoNumberLabel"
        app:layout_constraintTop_toTopOf="@id/demoNumberLabel"
        tools:text="demo"
        />

    <TextView
        android:id="@+id/demoBooleanLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo_boolean"
        android:layout_margin="@dimen/af_util_margin_padding_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/demoNumberLabel" />

    <TextView
        android:id="@+id/demoBooleanValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/af_util_margin_padding_default"
        app:layout_constraintLeft_toRightOf="@id/demoBooleanLabel"
        app:layout_constraintTop_toTopOf="@id/demoBooleanLabel"
        tools:text="demo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>